		@Override
		public void actionPerformed(ActionEvent e) {
			if(e.getSource()==b1)
			{ListerStagiere ge=new ListerStagiere();
			ListerStagiere.main(null);
					
			}
 			{ModifierStagiere ge=new ModifierStagiere();
			ModifierStagiere.main(null);
			}
			if(e.getSource()==b6)
			{SupprimerStage s=new SupprimerStage();
			SupprimerStage.main(null);	
			}
			if (e.getSource()==b8)
			{Aceuille inter=new Aceuille("stage");
				inter.setVisible(true);
				dispose();
			
			}
			
			
		}
			
		
	
	public static void main(String [] args){
