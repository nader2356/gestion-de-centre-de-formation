            int k=0;
            if(rs.next()){
                rs.last();
                k=rs.getRow();
                rs.beforeFirst();
            }
           Object[][] t=new Object[k][4];
           // met le resultat de la requete dans un tableau
            while (rs.next()){
               
               t[i][0]=rs.getString("nom");
               t[i][1]=rs.getString("prenom");
               t[i][2]=rs.getString("email");  
               t[i][3]=rs.getString("cin");  
